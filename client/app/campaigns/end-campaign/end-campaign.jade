.container.main
  form.form-horizontal(name='endCmapaignForm')
    .form-group
      label.col-sm-2 Winner
      .col-sm-10
        selectize(config='winnersConfig', options='winners', ng-model='campaign.winner')
    .btn-row
      .col-md-6
        button.btn.btn-lg.btn-default.btn-block(ng-click='goBack()') Cancel
      .col-md-6
        button.btn.btn-lg.btn-warning.btn-block(ng-click='endCampaign()') End this campaign


