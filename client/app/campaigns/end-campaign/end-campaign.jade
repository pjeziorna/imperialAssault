div(ng-include='"components/navbar/navbar.html"')
random-bg(path='../../assets/images')

.container.main
  h1 End campaign: {{campaign.name}}
  form.form-horizontal(name='endCmapaignForm', ng-submit='endCmapaignForm.$valid')
    .form-group
      label.col-sm-2 Winner
      .col-sm-10
        selectize(config='winnersConfig', options='winners', ng-model='campaign.winner', required)
    .btn-row
      .col-md-6
        button.btn.btn-lg.btn-default.btn-block(ng-click='goBack()') Cancel
      .col-md-6
        button.btn.btn-lg.btn-warning.btn-block(ng-click='endCampaign()') End {{campaign.name}}


div(ng-include='"components/static/footer.html"')
