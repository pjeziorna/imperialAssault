div(ng-include='"components/navbar/navbar.html"')
random-bg(path='../../assets/images')

.container
  .row
    .col-sm-12
      h1 Login

    .col-sm-12
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .row
          .col-sm-6
            .form-group
              label(for='login') Login
              input.form-control(id='login', type='text', name='login', ng-model='user.login')
          .col-sm-6
            .form-group
              label(for='passwd') Password
              input.form-control(id='passwd', type='password', name='password', ng-model='user.password')

        .form-group.has-error
          p.help-block(ng-show='form.login.$error.required && form.password.$error.required && submitted')
            | Please enter your login and password.
          p.help-block {{ errors.other }}

        .row
          .col-sm-6
            .form-group
              a.btn.btn-info.btn-block(ui-sref='signup')
                | Register
          .col-sm-6
            .form-group
              button.btn.btn-warning.btn-block(type='submit')
                | Login
